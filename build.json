{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "simple-build-image",
        "annotations": {
            "description": "Template to build simple build images.",
            "tags": "simple-build-image"
        }
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appTypes": "simple-build-image",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appTypes": "simple-build-image",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "Generic",
                        "generic" : {
                            "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY}",
                        "ref": "master"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "noCache": true,
                        "dockerfilePath": "${DOCKER_FILE_PATH}",
                        "from": {
                            "kind": "DockerImage",
                            "name": "${S2I_IMAGE}"
                        },
                        "env": [
                                    {
                                        "name": "NB_PYTHON_VER",
                                        "value": "${NB_PYTHON_VER}"
                                    },
                                    {
                                        "name": "BAZEL_VERSION",
                                        "value": "${BAZEL_VERSION}"
                                    },
                                    {
                                        "name": "FROM",
                                        "value": "${FROM}"
                                    }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:${VERSION}"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "4",
                        "memory": "8Gi"
                    },
                    "requests": {
                        "cpu": "4",
                        "memory": "8Gi"
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "The name of the application.",
            "value": "simple-build-image",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY",
            "description": "Git repository for source.",
            "value": "https://github.com/sub-mod/simple-build-job.git",
            "required": true
        },
        {
            "name": "S2I_IMAGE",
            "description": "registry.fedoraproject.org/f27/s2i-core, registry.fedoraproject.org/f28/s2i-core, registry.access.redhat.com/rhscl/s2i-core-rhel7",
            "value": "openshift/base-centos7",
            "required": true
        },
        {
            "name": "DOCKER_FILE_PATH",
            "description": "Dockerfile, Dockerfile.fedora28, Dockerfile.rhel75.",
            "value": "Dockerfile",
            "required": true
        },
        {
            "name": "FROM",
            "description": "nvidia/cuda:9.0-cudnn7-devel-centos7",
            "value": "nvidia/cuda:9.0-cudnn7-devel-centos7",
            "required": true
        },
        {
            "name": "NB_PYTHON_VER",
            "description": "Python version 2.7,3.5,3.6 ",
            "value": "3.6",
            "required": true
        },
        {
            "name": "BAZEL_VERSION",
            "description": "BAZEL_VERSION",
            "value": "0.15.0",
            "required": true
        },
        {
            "name": "GENERIC_WEBHOOK_SECRET",
            "description": "A secret string used to configure the Generic webhook.",
            "value": "tf-build-secret",
            "required": true
        },
        {
            "name": "VERSION",
            "description": "Version of the build image, i.e docker image tag",
            "value": "latest",
            "required": true
        }
    ]
}

